@model ProjectModels.News
@{
    ViewData["Title"] = "NewsDetail";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<div class="site-blocks-cover overlay" style="background-image: url(@Url.Content("~/images/hero_bg_3.jpg"));" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-start">
            <div class="col-md-6 text-center text-md-left" data-aos="fade-up" data-aos-delay="400">
                <h1 class="bg-text-line">News</h1>
                <p class="mt-4">Read the Latest News and Updates</p>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-12">
                <div class="post-entry">
                    <div class="image text-center">
                        <img src="@Url.Content("~/images/News/" + Model.Logo)" alt="@Model.Title" class="img-fluid image rounded-circle">
                    </div>
                    <div class="text p-4">
                        <h2 class="h3 text-black">@Model.Title</h2>
                        <span class="text-uppercase date d-block mb-3"><small>@Model.PublishDate</small></span>
                        <div class="content">
                            @Html.Raw(Model.Content)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
