@model IEnumerable<ProjectModels.Player>

@{
    ViewData["Title"] = "Player";
}
<div class="site-blocks-cover overlay" style="background-image: url(@Url.Content("~/images/hero_bg_3.jpg"));" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-start">
            <div class="col-md-6 text-center text-md-left" data-aos="fade-up" data-aos-delay="400">
                <h1 class="bg-text-line">Former players</h1>
                <p class="mt-4">Fight hard, warriors</p>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center mb-5">
                <h2 class="text-black">Player</h2>
            </div>
        </div>
        <div class="d-flex row">
            @foreach (var item in Model)
            {
                <div class="mb-4 mb-lg-0 col-6 col-md-4 col-lg-2 text-center">
                    <div class="player mb-5">
                        @*<span class="team-number">@item.Id</span>*@
                        <a class="btn btn-outline-dark" asp-route-id="@item.Id" asp-action="Details" asp-controller="Player">
                            <img src="@Url.Content("~/images/PlayerImg/" +item.PlayerImg)" alt="@item.PlayerName" class="img-fluid image rounded-circle" width="80" height="80">
                        </a>
                        <h2>@item.PlayerName</h2>
                        <span class="position">Overall: @item.PlayerOVR</span>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

