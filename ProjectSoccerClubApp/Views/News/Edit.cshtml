@model ProjectModels.News

@{
    ViewData["Title"] = "Edit Product";
    Layout = "_BackendLayout";
}

<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">

    @await Html.PartialAsync("~/Views/Backend/_Aside.cshtml")

    <div class="body-wrapper">

        @await Html.PartialAsync("~/Views/Backend/_Header.cshtml")

        <div class="col-lg-12 d-flex align-items-stretch">
            <div class="card w-100">
                <div class="card-body p-4">
                    <h5 class="card-title fw-semibold mb-4">Edit Product</h5>
                    <form asp-action="Edit" asp-controller="News" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="ID" />
                        <div class="form-group">
                            <label asp-for="Title">Name</label>
                            <input asp-for="Title" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Content">Slug</label>
                            <input asp-for="Content" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Author">Description</label>
                            <textarea asp-for="Author" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label asp-for="PublishDate">Original Price</label>
                            <input asp-for="PublishDate" class="form-control" />
                        </div>
                       
                       

                        <div class="form-group">
                            <label asp-for="Logo">Photo</label>
                            <input asp-for="Logo" type="file" name="file" class="form-control-file" />
                            <img src="@Url.Content("~/images/News/" + Model.Logo)" width="50" height="50">
                        </div>

                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
