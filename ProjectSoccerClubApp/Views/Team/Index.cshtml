@model IEnumerable<ProjectModels.Team>

@{
    ViewData["Title"] = "Index";
    Layout = "_BackendLayout";
    int i = 1;
}

<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">

    @await Html.PartialAsync("~/Views/Backend/_Aside.cshtml")

    <div class="body-wrapper">

        @await Html.PartialAsync("~/Views/Backend/_Header.cshtml")

        <!-- Change this content if you need to modify -->
        <div class="col-lg-12 d-flex align-items-stretch">
         
            <div class="card w-100">
                <div class="card-body p-4">
                    <h5 class="card-title fw-semibold mb-4">Team</h5>
                    <a class="btn btn-info" asp-action="Create" asp-controller="Team">Create new Team</a>
                    <div>
                        
                        @if (!string.IsNullOrEmpty(TempData["msg"] as string))
                        {
                            <div class="alert alert-success">
                                @TempData["msg"]
                            </div>
                        }
                      
                    </div>
                    <div class="table-responsive">
                        <table class="table text-nowrap mb-0 align-middle">
                            <thead class="text-dark fs-4">
                                <tr class="text-center">
                                    <th class="border-bottom-0">
                                        <h4 class="fw-semibold mb-0">#</h4>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h4 class="fw-semibold mb-0">Team Name</h4>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h4 class="fw-semibold mb-0">City</h4>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h4 class="fw-semibold mb-0">Head Coach</h4>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h4 class="fw-semibold mb-0">Home Ground</h4>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h4 class="fw-semibold mb-0">Logo</h4>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h4 class="fw-semibold mb-0">Action</h4>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="text-center">
                                        <td class="border-bottom-0">
                                            <h6 class="fw-semibold mb-0"> @i </h6>
                                        </td>
                                        <td class="border-bottom-0">
                                            <h6 class="fw-semibold mb-1">@Html.DisplayFor(modelItem => item.TeamName)</h6>
                                        </td>
                                        <td class="border-bottom-0">
                                            <h6 class="fw-semibold mb-1">@Html.DisplayFor(modelItem => item.TeamCity)</h6>
                                        </td>
                                        <td class="border-bottom-0">
                                            <h6 class="fw-semibold mb-1">@Html.DisplayFor(modelItem => item.CoachName)</h6>
                                        </td>
                                        <td class="border-bottom-0">
                                            <h6 class="fw-semibold mb-1">@Html.DisplayFor(modelItem => item.TeamStadium)</h6>
                                        </td>
                                        <td class="border-bottom-0">
                                            <p class="mb-0 fw-normal">
                                                <a href="@item.Website">
                                                    <img src="@Url.Content("~/images/Logo/"+item.Logo)" width="50" height="50">
                                                </a>
                                            </p>
                                        </td>
                                        <td class="border-bottom-0">
                                            <div class="d-flex align-items-center gap-2">
                                                <form asp-action="Delete" asp-controller="Team" method="post" enctype="multipart/form-data">
                                                    <input type="hidden" name="id" value="@item.Id">
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="fa fa-trash"></i>
                                                    </button>
                                                </form>
                                                <a class="btn btn-info" asp-route-id="@item.Id" asp-action="Edit" asp-controller="Team">
                                                    <i class="fa fa-gear"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    i++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- End change -->

    </div>
</div>

