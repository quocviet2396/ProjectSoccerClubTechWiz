@model ProjectModels.Products

@{
    ViewData["Title"] = "Edit Product";
    Layout = "_BackendLayout";
}

<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">

    @await Html.PartialAsync("~/Views/Backend/_Aside.cshtml")

    <div class="body-wrapper">

        @await Html.PartialAsync("~/Views/Backend/_Header.cshtml")

        <div class="col-lg-12 d-flex align-items-stretch">
            <div class="card w-100">
                <div class="card-body p-4">
                    <h5 class="card-title fw-semibold mb-4">Edit Product</h5>
                    <form asp-action="Edit" asp-controller="Product" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Name">Name</label>
                            <input asp-for="Name" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Slug">Slug</label>
                            <input asp-for="Slug" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Descrption">Description</label>
                            <textarea asp-for="Descrption" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label asp-for="OriginalPrice">Original Price</label>
                            <input asp-for="OriginalPrice" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="SellingPrice">Selling Price</label>
                            <input asp-for="SellingPrice" class="form-control" />
                        </div>
                        <div class="form-check mb-3">
                            <input asp-for="Trending" class="form-check-input" type="checkbox">
                            <label class="form-check-label">Trending</label>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="Featured" class="form-check-input" type="checkbox">
                            <label class="form-check-label">Featured</label>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="status" class="form-check-input" type="checkbox">
                            <label class="form-check-label">Status</label>
                        </div>

                        <div class="form-group">
                            <label asp-for="CategoryId">Category</label>
                            <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control">
                                <option value="">Select Category</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label asp-for="Photo">Photo</label>
                            <input asp-for="Photo" type="file" name="file" class="form-control-file" />
                            <img src="@Url.Content("~/images/ProductPhoto/" + Model.Photo)" width="50" height="50">
                        </div>

                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
