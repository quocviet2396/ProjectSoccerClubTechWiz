@model IEnumerable<ProjectModels.Player>
@{
	ViewData["Title"] = "Index";
	Layout = "_BackendLayout";
	int i = 1;
}

<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
	 data-sidebar-position="fixed" data-header-position="fixed">

	@await Html.PartialAsync("~/Views/Backend/_Aside.cshtml")

	<div class="body-wrapper">

		@await Html.PartialAsync("~/Views/Backend/_Header.cshtml")

		<!-- Change this content if you need to modify -->
		<div class="col-lg-12 d-flex align-items-stretch">
			<div class="card w-100">
				<div class="card-body p-4">
					<h5 class="card-title fw-semibold mb-4">Team</h5>
					<a class="btn btn-info" asp-action="Create" asp-controller="Player">Create new Player</a>
					<div class="table-responsive">
						<form asp-action="Delete" asp-controller="Player" method="post">
						<table class="table text-nowrap mb-0 align-middle">

							<thead class="text-dark fs-4">
								<tr class="text-center">
									<th class="border-bottom-0">
										<h4 class="fw-semibold mb-0">Id</h4>
									</th>
									<th class="border-bottom-0">
										<h4 class="fw-semibold mb-0">Name</h4>
									</th>
									<th class="border-bottom-0">
										<h4 class="fw-semibold mb-0">Position</h4>
									</th>
									<th class="border-bottom-0">
										<h4 class="fw-semibold mb-0">Nationality</h4>
									</th>
									<th class="border-bottom-0">
										<h4 class="fw-semibold mb-0">Photo</h4>
									</th>
									<th class="border-bottom-0">
										<h4 class="fw-semibold mb-0">Overall</h4>
									</th>
									<th class="border-bottom-0">
										<h4 class="fw-semibold mb-0">Action</h4>
									</th>
									<th class="border-bottom-0">
										<h4>
											<input type="submit" value="Delete" class="fw-semibold mb-0"
														   onclick="return confirm('Are you sure to delete?')" />
										</h4>			
									</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr class="text-center">
										<td class="border-bottom-0">
											<h6 class="fw-semibold mb-0"> @i </h6>
										</td>
										<td class="border-bottom-0">
											<h6 class="fw-semibold mb-1">@Html.DisplayFor(modelItem => item.PlayerName)</h6>
										</td>
										<td class="border-bottom-0">
											<h6 class="fw-semibold mb-1">@Html.DisplayFor(modelItem => item.PlayerPosition)</h6>
										</td>
										<td class="border-bottom-0">
											<h6 class="fw-semibold mb-1">@Html.DisplayFor(modelItem => item.PlayerNationality)</h6>
										</td>
										<td class="border-bottom-0">
											<p class="mb-0 fw-normal">
													<img src="@Url.Content("~/images/PlayerImg/" +item.PlayerImg)" width="50" height="50">
											</p>
										</td>
										<td class="border-bottom-0">
											<h6 class="fw-semibold mb-1">@Html.DisplayFor(modelItem => item.PlayerOVR)</h6>
										</td>
										<td class="border-bottom-0">
											<div class="d-flex align-items-center gap-2">
												<a class="btn btn-info" asp-route-id="@item.Id" asp-action="Edit" asp-controller="Player">
													<i class="fa fa-gear"></i>
												</a>
											</div>
										</td>
										<td class="border-bottom-0">
											<input type="checkbox" name="arrList" value="@item.Id" />
										</td>
									</tr>
									i++;
								}
							</tbody>
						</table>
						</form>

					</div>
				</div>
			</div>
			<!-- End change -->

		</div>
	</div>

