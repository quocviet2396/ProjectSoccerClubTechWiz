@model ProjectModels.Player

@{
    ViewData["Title"] = "Create";
    Layout = "_BackendLayout";
}


<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">

    @await Html.PartialAsync("~/Views/Backend/_Aside.cshtml")

    <div class="body-wrapper">

        @await Html.PartialAsync("~/Views/Backend/_Header.cshtml")

        <div class="container-fluid">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title fw-semibold mb-4">Create Player</h5>
                    <div class="card">
                        <div class="card-body">
                            <form asp-action="Create" asp-controller="Player" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="PlayerName" class="control-label"></label>
                                    <input asp-for="PlayerName" class="form-control" />
                                    <span asp-validation-for="PlayerName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PlayerPosition" class="control-label"></label>
                                    <input asp-for="PlayerPosition" class="form-control" />
                                    <span asp-validation-for="PlayerPosition" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PlayerDOB" class="control-label"></label>
                                    <input asp-for="PlayerDOB" class="form-control" />
                                    <span asp-validation-for="PlayerDOB" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PlayerNationality" class="control-label"></label>
                                    <input asp-for="PlayerNationality" class="form-control" />
                                    <span asp-validation-for="PlayerNationality" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PlayerImg" class="control-label"></label>
                                    <input asp-for="PlayerImg" type="file" name="file" class="form-control" />
                                    <span asp-validation-for="PlayerImg" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PlayerOVR" class="control-label"></label>
                                    <input asp-for="PlayerOVR" class="form-control" />
                                    <span asp-validation-for="PlayerOVR" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TeamId" class="control-label"></label>
                                    <select asp-for="TeamId" class="form-control" asp-items="ViewBag.TeamId">
                                        <option value="">--Selected--</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
 

                    <div>
                        <a class="btn btn-primary" asp-action="Index">Back to List</a>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
